{% form_theme this.form '@DevscastDashlite/layout/form_theme.html.twig' %}

<turbo-frame id="form-modal-frame">
    {{ form_start(this.form, {attr: {'data-turbo-frame': _turbo_frame_target is defined ? _turbo_frame_target : '_top', 'novalidate': 'novalidate'}}) }}
        {% if _turbo_frame_target is defined %}
            {{ form_errors(this.form) }}
        {% endif %}

        <div class="row">
            {{ form_rest(this.form) }}
        </div>

        <button class="mt-3 btn btn-primary">
            <twig:DashliteIcon name="save-fill" />
            <span>{{ 'global.submit' | trans([], 'messages') }}</span>
        </button>
    {{ form_end(this.form) }}
</turbo-frame>
