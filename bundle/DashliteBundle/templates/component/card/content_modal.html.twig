<div {{ stimulus_target('modal-content', 'modal') }} url="{{ this.url }}" class="modal zoom" id="{{ this.id }}" style="display: none;" aria-hidden="true" tabindex="-1">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-{{ this.position }} modal-{{ this.size }}" role="document">
        <div class="modal-content">
            {% if this.action is defined %}
                <div class="modal-header">
                    <twig:block name="header">
                        <h5 class="modal-title">{{ this.action }}</h5>
                    </twig:block>
                </div>
            {% endif %}
            <twig:block name="content">
                <div {{ stimulus_target('modal-content', 'content') }} class="modal-body">
                    <div class="text-center">
                        <div class="spinner-grow" style="width: 3rem; height: 3rem;" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </twig:block>
        </div>
    </div>
</div>
