{% extends '@DevscastDashlite/layout/base.html.twig' %}
{% set _title = (data is defined and data) ? "Édition #{ _entity | trans([], _domain) }" : "Création #{_entity | trans([], _domain)}" %}
<twig:block name="title">{{ _title }}</twig:block>

<twig:block name="header">
    <twig:Header :title="_title" backTitle="Toutes les entrées" backPath="{{ _index_url }}">
        <twig:block name="content">
            {% if _show_url %}
                <twig:HeaderLinkButton name="détails" icon="eye" path="{{ _show_url }}" />
            {% endif %}
        </twig:block>
    </twig:Header>
</twig:block>

<twig:block name="content">
    <twig:Card>
        <twig:block name="content">
            <twig:Form :form="form" />
        </twig:block>
    </twig:Card>
</twig:block>
