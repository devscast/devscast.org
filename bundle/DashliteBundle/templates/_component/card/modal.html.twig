<div {{ stimulus_target('modal-form', 'modal') }} class="modal zoom" id="form-modal" style="display: none;" aria-hidden="true" tabindex="-1">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-{{ this.position }}" role="document">
        <div class="modal-content">
            <div class="modal-header">
               <twig:block name="header">
                   <h5 class="modal-title">{{ this.action }}</h5>
               </twig:block>
            </div>
            <twig:block name="content">
                <turbo-frame class="modal-body" id="{{ this.id ?? 'form-modal-frame' }}" src="{{ this.path }}?modal=true" loading="lazy">
                    <div class="text-center">
                        <div class="spinner-grow" style="width: 3rem; height: 3rem;" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </turbo-frame>
            </twig:block>

            <div class="modal-footer">
                <twig:block name="footer"></twig:block>
            </div>
        </div>
    </div>
</div>
