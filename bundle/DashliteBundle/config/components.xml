<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="dashlite.twig.component.sidebar" class="Devscast\Bundle\DashliteBundle\Component\Sidebar\SidebarComponent" public="true">
            <tag
                name="twig.component"
                template="@DevscastDashlite/_component/sidebar.html.twig"
            />
            <argument type="service" id="request_stack"/>
        </service>

        <!-- tables -->
        <service id="dashlite.twig.component.table.responsive" class="Devscast\Bundle\DashliteBundle\Component\Table\TableResponsiveComponent" public="true">
            <tag
                name="twig.component"
                template="@DevscastDashlite/_component/table/responsive.html.twig"
            />
        </service>

        <!-- cards -->
        <service id="dashlite.twig.component.card.modal" class="Devscast\Bundle\DashliteBundle\Component\Card\ModalComponent" public="true">
            <tag
                name="twig.component"
                template="@DevscastDashlite/_component/card/modal.html.twig"
            />
        </service>
        <service id="dashlite.twig.component.card.empty_state" class="Devscast\Bundle\DashliteBundle\Component\Card\EmptyStateCardComponent" public="true">
            <tag
                name="twig.component"
                template="@DevscastDashlite/_component/card/empty_state.html.twig"
            />
        </service>


        <!-- layout -->
        <service id="dashlite.twig.component.layout.header" class="Devscast\Bundle\DashliteBundle\Component\Layout\HeaderComponent" public="true">
            <tag
                name="twig.component"
                template="@DevscastDashlite/_component/layout/header.html.twig"
            />
        </service>
    </services>
</container>
