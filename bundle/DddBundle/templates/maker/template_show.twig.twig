{{ "{% extends \"@admin/shared/layout/base.html.twig\" %}" }}
{{ "<twig:block name=\"title\">#{entity} : {{ data.name }}</twig:block>" }}

{{ "<twig:block name=\"header\">" }}
    {{ "<twig:DashliteHeader title=\"{{ data.name }}\" backTitle=\"Tous les articles\" backPath=\"{{ path('admin_#{domain}_#{entity}_index') }}\">" |  raw }}
        {{ "<twig:DashliteHeaderLinkButton name=\"Ã‰diter\" path=\"{{ path('admin_#{domain}_#{entity}_edit', {id: data.id}) }}\" icon=\"edit-alt-fill\" />" | raw }}
        {{ "<twig:DashliteDeleteButton path=\"{{ path('admin_#{domain}_#{entity}_delete', {id: data.id}) }}\" :id=\"data.id\" redirect=\"{{ path('admin_#{domain}_#{entity}_index') }}\" type=\"button\" />" | raw }}
    {{ '</twig:DashliteHeader>' }}
{{ "</twig:block>" }}

{{ "<twig:block name=\"content\">" }}
    {{ '<twig:DashliteCard>' }}
        {{ "<twig:DashliteMetaDataList>" }}
            {{ "<twig:DashliteMetaDataSection row>" }}
{% for p in entityClassProperties %}
{% if p.native %}
                {{ "<twig:DashliteMetaDataItem label=\"#{p.name}\" value=\"{{ data.#{p.name} }}\" />" | raw }}
{% endif %}
{% endfor %}
            {{ "</twig:DashliteMetaDataSection>" }}
        {{ "</twig:DashliteMetaDataList>" }}
    {{ '</twig:DashliteCard>' }}
{{ "</twig:block>" }}
