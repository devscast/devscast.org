{% extends '@admin/shared/layout/base.html.twig' %}
<twig:block name="title">Édition Utilisateur</twig:block>

<twig:block name="header">
    <twig:Header title="Édition Utilisateur">
        <twig:HeaderLinkButton name="Toutes les entrées" path="{{ _index_url }}" icon="arrow-long-left" />
        {% if _show_url %}
            <twig:HeaderLinkButton name="Revenir aux détails" path="{{ _show_url }}" icon="eye" />
        {% endif %}
    </twig:Header>
</twig:block>

<twig:block name="content">
    {% if app.user == data %}
        <twig:Alert state="warning" type="pro" message="Modifier les informations de votre propre compte entraîne une déconnexion
            et ceci peut également entraîner à une perte d'accès au système.
            Modifier vos informations depuis vos paramètres de profil." dismissible />
    {% endif %}

    <twig:Card>
        <twig:block name="content">
            <twig:Form :form="form" />
        </twig:block>
    </twig:Card>
</twig:block>
