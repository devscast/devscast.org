{% extends '@DevscastDashlite/layout/base.html.twig' %}
{% block sidebar include('@admin/shared/_sidebar.html.twig') %}
{% block title 'Envoier un email à #{data.username}' | title %}

{% block header %}
    {% embed "@DevscastDashlite/component/_header.html.twig" %}
        {% block header_title "Envoier un email à #{data.username}" | title %}
        {% block header_action_list %}
            <li>
                <a href="{{ path('admin_authentication_user_show', {id: data.id}) }}" class="btn btn-white btn-dim btn-outline-light" aria-label="{{ 'global.back' | trans }}" title="{{ 'global.back' | trans }}">
                    {{ 'arrow-long-left' | icon }}
                    <span>Voir l'utilisateur</span>
                </a>
            </li>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
    {% embed "@DevscastDashlite/component/card/_simple.html.twig" %}
        {% block simple_card_body %}
            {% include '@DevscastDashlite/component/_form.html.twig' %}
        {% endblock %}
    {% endembed %}
{% endblock %}
