{% extends '@admin/shared/layout/base.html.twig' %}
<twig:block name="title">Envoyer un email à {{ data.username }} | title</twig:block>

<twig:block name="header">
    <twig:DashliteHeader title="Envoyer un mail">
        <twig:DashliteHeaderLinkButton name="Toutes les entrées" path="{{ _index_url }}" icon="arrow-long-left" />
        {% if _show_url %}
            <twig:DashliteHeaderLinkButton name="Revenir aux détails" path="{{ _show_url }}" icon="eye" />
        {% endif %}
    </twig:DashliteHeader>
</twig:block>

<twig:block name="content">
    <twig:DashliteCard>
        <twig:DashliteForm :form="form"></twig:DashliteForm>
    </twig:DashliteCard>
</twig:block>
