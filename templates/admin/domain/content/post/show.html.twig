{% extends '@admin/shared/layout/base.html.twig' %}
<twig:block name="title">{{ "Posts #{data.id}" }}</twig:block>
<twig:block name="wideContentClass">{{ 'wide-xxl' }}</twig:block>

<twig:block name="header">
    <twig:Header :title="data.name">
        <twig:block name="description">
            <ul class="list-inline">
                <li>ID : <span class="text-base">{{ data.id }}</span></li>
                <li>Création : <span class="text-base">{{ data.createdAt | date }}</span></li>
                <li>Publication : <span class="text-base">{{ data.scheduledAt | date }}</span> </li>
            </ul>
        </twig:block>

        <twig:HeaderLinkButton name="Tous les posts" path="{{ path('admin_content_post_index') }}" icon="arrow-long-left" />
        <twig:HeaderLinkButton name="Éditer" path="{{ path('admin_content_post_edit', {id: data.id}) }}" icon="edit-alt-fill" />
        <twig:DeleteButton path="{{ path('admin_content_post_delete', {id: data.id}) }}" :item="data" redirect="{{ path('admin_content_post_index') }}" type="button" />
    </twig:Header>
</twig:block>

<twig:block name="content">
    <twig:AsideCard>
        <twig:block name="tabs">
            <ul class="nav nav-tabs nav-tabs-mb-icon nav-tabs-card">
                <li class="nav-item">
                    <a class="nav-link active" href="#">
                        <twig:Icon name="edit" />
                        <span>Détails</span>
                    </a>
                </li>
                <li class="nav-item"><a class="nav-link" href="#">
                        <twig:Icon name="chat" />
                        <span>Commentaires</span>
                    </a>
                </li>
                <li class="nav-item nav-item-trigger d-xxl-none">
                    <a href="#" class="toggle btn btn-icon btn-trigger" data-target="userAside">
                        <twig:Icon name="user-list-fill" />
                    </a>
                </li>
            </ul>
        </twig:block>

        <twig:block name="content">
            <div class="nk-block">
                <div class="nk-block-head">
                    {{ data.content | markdown_to_html }}
                    <twig:DataItem label="Nom" :value="data.name" />
                    <twig:DataItem label="Slug" :value="data.slug" />
                </div>
                <div class="nk-divider divider md"></div>
                <twig:DataList title="Informations supplémentaires">
                    <twig:DataItem label="Commentaires autorisés" :value="data.isCommentable | boolean" />
                    <twig:DataItem label="Featured" :value="data.isFeatured | boolean" />
                    <twig:DataItem label="Top promoted" :value="data.isTopPromoted | boolean" />
                    <twig:DataItem label="Premium" :value="data.isPremium | boolean" />
                </twig:DataList>
            </div>
        </twig:block>

        <twig:block name="aside">
            <div class="card-aside card-aside-right user-aside toggle-slide toggle-slide-right toggle-break-xxl toggle-screen-xxl" data-bs-content="userAside" data-toggle-screen="xxl" data-toggle-overlay="false" data-toggle-body="false">
                <div class="card-inner-group">
                    <div class="card-inner">
                        <div class="user-card user-card-s2">
                            <img src="{{ vich_uploader_asset(data, 'thumbnail_file') }}" alt="couverture {{ data.name }}">
                        </div>
                    </div>
                    <div class="card-inner"><h6 class="overline-title-alt mb-2">Additional</h6>
                        <div class="row g-3">
                            <div class="col-6">
                                <span class="sub-text">Lectures (unique)</span>
                                <span>{{ data.uniqueViewCount }}</span>
                            </div>
                            <div class="col-6">
                                <span class="sub-text">Lectures (total)</span>
                                <span>{{ data.viewCount }}</span>
                            </div>
                            <div class="col-6">
                                <span class="sub-text">Status</span>
                                {% if data.isOnline %}
                                    <span class="lead-text text-success">En ligne</span>
                                {% else %}
                                    <span class="lead-text text-danger">Hors ligne</span>
                                {% endif %}
                            </div>
                            <div class="col-6">
                                <span class="sub-text">Publication:</span>
                                <span>{{ data.scheduledAt | date }}</span>
                            </div>
                        </div>
                    </div>
                    {% if data.series %}
                        <div class="card-inner">
                            <h6 class="overline-title-alt mb-3">Séries</h6>
                            <span>
                                <a href="{{ path('admin_content_post_series_show', {id: data.series.id}) }}">
                                    {{ data.series.name }}
                                </a>
                            </span>
                        </div>
                    {% endif %}
                    {% if data.tags | length > 0 %}
                        <div class="card-inner">
                            <h6 class="overline-title-alt mb-3">Tags</h6>
                            <ul class="g-1">
                                {% for tag in data.tags %}
                                    <li class="btn-group">
                                        <a class="btn btn-xs btn-info btn-dim" href="#">{{ tag.name }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}
                    {% if data.technologies | length > 0 %}
                        <div class="card-inner">
                            <h6 class="overline-title-alt mb-3">Technologies</h6>
                            <ul class="g-1">
                                {% for technology in data.technologies %}
                                    <li class="btn-group">
                                        <a class="btn btn-xs btn-info btn-dim" href="#">{{ technology.name }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}
                </div>
            </div>
        </twig:block>
    </twig:AsideCard>
</twig:block>
