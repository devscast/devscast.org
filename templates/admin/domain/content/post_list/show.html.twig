{% extends '@admin/shared/layout/base.html.twig' %}
<twig:block name="title">{{ "List #{data.id}" }}</twig:block>
<twig:block name="wideContentClass">{{ 'wide-xxl' }}</twig:block>

<twig:block name="header">
    <twig:Header title="Détails de la liste">
        <twig:HeaderLinkButton name="Toutes les listes" path="{{ path('admin_content_post_list_index') }}" icon="arrow-long-left" />
        <twig:HeaderLinkButton name="Éditer" path="{{ path('admin_content_post_list_edit', {id: data.id}) }}" icon="edit-alt-fill" />
        <twig:DeleteButton path="{{ path('admin_content_post_list_delete', {id: data.id}) }}" :item="data" redirect="{{ path('admin_content_post_list_index') }}" type="button" />
    </twig:Header>
</twig:block>

<twig:block name="content"></twig:block>
