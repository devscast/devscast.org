{% extends '@admin/shared/layout/base.html.twig' %}
<twig:block name="title">{{ 'Vidéos' }}</twig:block>

<twig:block name="header">
    <twig:DashliteHeader title="Vidéos">
        <twig:DashliteHeaderLinkButton name="Ajouter" icon="plus" path="{{ path('admin_content_video_new') }}" />
    </twig:DashliteHeader>
</twig:block>

<twig:block name="content">
    <div class="row g-gs mb-4">
        <div class="col-12">
            <twig:DashliteResponsiveTable :data="data" emptyStateAction="Ajouter une vidéo" emptyStatePath="{{ path('admin_content_video_new') }}">
                <twig:block name="header">
                    <twig:DashliteResponsiveTableColumn value="nom" cols />
                    <twig:DashliteResponsiveTableColumn value="Lecture" cols />
                    <twig:DashliteResponsiveTableColumn value="Statut" cols />
                    <twig:DashliteResponsiveTableColumn tools />
                </twig:block>

                <twig:DashliteResponsiveTableColumn value="{{ item.name }}" />
                <twig:DashliteResponsiveTableColumn>{{ (item.duration / 60) | round(1, 'floor') }} min</twig:DashliteResponsiveTableColumn>
                <twig:DashliteResponsiveTableColumn>{{ item.status.translationKey | trans([], 'content') | badge }}</twig:DashliteResponsiveTableColumn>
                <twig:DashliteResponsiveTableColumn tools>
                    <twig:DashliteResponsiveTableTools>
                        <twig:DashliteResponsiveTableAction icon="eye" path="{{ path('admin_content_video_show', {id: item.id}) }}" />
                        <twig:DashliteResponsiveTableAction icon="edit" path="{{ path('admin_content_video_edit', {id: item.id}) }}" />
                    </twig:DashliteResponsiveTableTools>
                </twig:DashliteResponsiveTableColumn>
            </twig:DashliteResponsiveTable>
        </div>
    </div>
</twig:block>
