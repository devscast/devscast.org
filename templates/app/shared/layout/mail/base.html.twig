{% apply inline_css(source('@app/shared/layout/mail/base.css')) %}
    <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
    <html xmlns="http://www.w3.org/1999/xhtml" lang="fr">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <title>Devscast Community</title>
        <style type="text/css">
          @media only screen and (max-width: 600px) {
            .inner-body {
              width: 100% !important;
            }

            .footer {
              width: 100% !important;
            }
          }

          @media only screen and (max-width: 500px) {
            .button {
              width: 100% !important;
            }
          }
        </style>
    </head>
    <body>

    <table class="wrapper" width="100%" cellpadding="0" cellspacing="0" role="presentation">
        <tr>
            <td align="center">
                <table class="content" width="100%" cellpadding="0" cellspacing="0" role="presentation">
                    <!-- Header -->
                    <tr>
                        <td class="header">
                            <a href="{{ absolute_url('/') }}" style="display: inline-block;">
                                <img src="{{ absolute_url(asset('/images/logo.webp')) }}" class="logo" alt="Devscast Logo" width="250px">
                            </a>
                        </td>
                        <!-- Email Body -->
                    <tr>
                        <td class="body" width="100%" cellpadding="0" cellspacing="0">
                            <table class="inner-body" align="center" width="570" cellpadding="0" cellspacing="0" role="presentation">
                                <!-- Body content -->
                                <tr>
                                    <td class="content-cell">
                                        {% block body '' %}

                                        Cordialement, <br>
                                        L'équipe Devscast.
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <table class="footer" align="center" width="570" cellpadding="0" cellspacing="0" role="presentation">
                                <tr>
                                    <td class="content-cell" align="center">
                                        {% block footer %}
                                            Vous recevez cet e-mail, car vous êtes un membre précieux de la communauté Devscast.
                                            <br><br>

                                            © 2019 - {{ 'now' | date('Y')}} Devscast. Tous droits réservés. <br>
                                            2189 Maman Yemo coin Sandoa, Haut-katanga, Lubumbashi RDC
                                        {% endblock %}
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    </body>
    </html>
{% endapply %}
