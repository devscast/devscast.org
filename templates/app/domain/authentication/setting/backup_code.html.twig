{% extends '@app/domain/authentication/layout/base.html.twig' %}

<twig:block name="body">
    <h1>Backup code</h1>

    <code>
        {% for code in codes %}
            <strong>{{ code }}</strong>
        {% endfor %}
    </code>

    <form action="{{ path('auth_setting_backup_codes_regenerate') }}" method="post">
        <button type="submit">regenerate</button>
    </form>
    <a href="{{ path('auth_setting_backup_codes_export') }}">download backup code (csv)</a>
</twig:block>

