<!DOCTYPE html>
<html lang="{{ app.request.locale | default('fr') }}" class="dark">
<head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="{{ asset('/images/favicon.webp') }}" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><twig:block name="title"></twig:block> | Devscast Community</title>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">

    <twig:block name="stylesheets">
        {{ encore_entry_link_tags('app') }}
    </twig:block>

    <twig:block name="javascripts">
        {{ encore_entry_script_tags('app') }}
    </twig:block>
</head>
{% include '@app/shared/component/_flash.html.twig' %}
<body class="<twig:block name="bodyClass">{{ 'min-h-screen flex items-center bg-neutral-lighter dark:bg-neutral-dark' }}</twig:block>">
<twig:block name="body">
    <div class="m-auto container px-12 sm:px-0 mx-auto">
        <div class="mx-auto h-full md:w-10/12 lg:w-5/12">
            <div class="m-auto  py-12  sm:p-12 xl:w-10/12 2xl:w-9/12">
                <twig:block name="header">
                    <div class="space-y-4 xl:p-2 2xl:p-6">
                        <a href="{{ path('app_index') }}" title="Devscast Community" aria-label="Devscast Community">
                            <img src="{{ asset('/images/logo-dark.png') }}" class="w-10 dark:hidden" alt="devscast logo"/>
                            <img src="{{ asset('/images/logo.png') }}" class="w-10 hidden dark:inline-block" alt="devscast logo"/>
                        </a>
                    </div>
                </twig:block>

                <twig:block name="content"></twig:block>

                <twig:block name="footer">
                    <div class="border-t mt-12 border-neutral-lighter pt-12 text-neutral-500 dark:border-neutral-800">
                        <div class="space-x-4 text-center text-sm">
                            <span class="text-neutral-300 font-light hover:text-neutral-400 dark:text-neutral-500 dark:hover:text-neutral-300">&copy; Devscast</span>
                            <a href="#" class="text-neutral-400 font-light hover:text-neutral-500 dark:text-neutral-500 dark:hover:text-neutral-300">Contact</a>
                            <a href="#" class="text-neutral-400 font-light hover:text-neutral-500 dark:text-neutral-500 dark:hover:text-neutral-300">Privacy & Terms</a>
                        </div>
                    </div>
                </twig:block>
            </div>
        </div>
    </div>
</twig:block>
</body>
</html>
