{% extends '@app/shared/layout/base.html.twig' %}
<twig:block name="title">Podcast {{ data.name }}</twig:block>

<twig:block name="content">
    <div class="content-background">
        <div class="md:mt-6">
            <div class="px-4 lg:px-5 xl:px-8">
                <div class="flex flex-col gap-10 sm:flex-row mt-6 md:mt-0 mb-10">
                    <div class="sm:w-40 md:w-48 lg:w-56 sm:min-w-[10rem] md:min-w-[12rem] lg:min-w-[14]">
                        <img src="{{ data.thumbnail.name ? vich_uploader_asset(data, 'thumbnail_file') : asset('/images/cover.jpg') }}" alt="podcast cover" class="w-full aspect-square object-cover rounded-md">
                    </div>
                    <div class="">
                        <h1 class="font-semibold text-xl text-fg-heading1">
                            {{ data.name }}
                        </h1>
                        <div class="flex gap-x-2 items-center flex-1 mt-3 justify-between text-fg">
                            <div class="flex items-center gap-x-1.5 text-sm">
                                <span>{{ data.duration }}</span>
                                <span class="w-1 h-1 rounded-full bg-fg"></span>
                                <span> {{ data.createdAt | date }}</span>
                            </div>
                        </div>

                        <div class="mt-6">
                            <h2 class="text-lg text-fg-heading1 font-semibold">Informations</h2>
                            <div class="mt-4 content-detail podcast-content-detail">
                                <p>
                                    {{ data.content | markdown_to_html }}
                                </p>
                            </div>
                        </div>

                        <div class="mt-10">
                            <h2 class="text-lg text-fg-heading1 font-semibold">Invites</h2>
                            <div class="mt-4 grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
                                {% for guest in data.guests %}
                                    <twig:AppPodcastGuestCard :guest="guest" />
                                {% endfor %}
                            </div>
                        </div>
                        <div class="space-y-2 mt-6 text-fg-heading2">
                            <h2 class="text-lg text-fg-heading1 font-semibold">Suivez en integralite ce podcast sur youtube</h2>
                            <div class="flex gap-4 flex-wrap items-center">
                                <a href="#" target="_blank" rel="noopener" class="btn btn-md text-sm before:bg-gray-900 dark:before:bg-primary text-gray-50 dark:text-gray-900">
