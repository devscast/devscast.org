<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Domain\Authentication\Entity\LoginAttempt" repository-class="Infrastructure\Authentication\Doctrine\Repository\LoginAttemptRepository" table="authentication_login_attempt">
        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>

        <many-to-one field="user" target-entity="Domain\Authentication\Entity\User">
            <join-column on-delete="CASCADE" />
        </many-to-one>

        <!-- Timestamp -->
        <field name="created_at" type="datetime_immutable"/>
        <field name="updated_at" type="datetime_immutable" nullable="true"/>
    </entity>
</doctrine-mapping>
